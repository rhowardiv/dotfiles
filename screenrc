#setenv LC_CTYPE en_US.UTF-8
#defutf8 on

sorendition gK

startup_message off
defscrollback 10000

# a nice status line
hardstatus on
hardstatus alwayslastline 
hardstatus string '%{= kG}[ %{c}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{c} %l %{g}]'

# starting windows

chdir $HOME
screen -t home

# pick the window you want to start in; if you do this twice the first one
# will be your "last" window (for quick switching)
select 0

# stuff to make colors work nicely
# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
# erase background with current bg color
defbce "on" 
